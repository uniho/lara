<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        # Disable MultiViews to prevent content negotiation issues
        # Disable directory listing to prevent exposing file structure
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # -------------------------------------------------
    # Deny access to any hidden files or directories
    # This will block URLs containing "/." anywhere in the path
    # -------------------------------------------------
    RewriteRule (^|/)\. - [F]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # -------------------------------------------------
    # Handle Requests for Existing Files...
    # -------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # -------------------------------------------------
    # Handle Requests for Directories...
    # Only serve the directory if index.html exists.
    # Otherwise, fall through to the Front Controller.
    # -------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteCond %{REQUEST_FILENAME}/index.html -f
    RewriteRule ^ - [L]

    # -------------------------------------------------
    # Send Requests To Front Controller...
    # -------------------------------------------------
    RewriteRule ^ index.php [L]    
</IfModule>
